<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/SecondFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.exxuslee.currencyconversion.ui.price.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <argument
            android:name="base"
            app:argType="string"
            android:defaultValue="EUR" />
        <argument android:name="check"
            app:argType="string"
            android:defaultValue="BTC" />
        <argument
            android:name="symbols"
            app:argType="com.exxuslee.domain.models.Symbols" />
        <argument
            android:name="name"
            app:argType="string"
            android:defaultValue="Euro" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.exxuslee.currencyconversion.ui.favorite.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment"
            app:popUpTo="@id/FirstFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>